<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <size
                android:width="100dp"
                android:height="100dp"/>

            <solid
                android:color="@color/image_background"
                android:width="100dp"/>

            <corners
                android:radius="50dp"/>

            <stroke
                android:width="1dp"
                android:color="@color/black"/>
        </shape>

        <shape>
            <size
                android:width="100dp"
                android:height="100dp"/>

            <solid
                android:color="@color/white" />

            <stroke
                android:width="1dp"
                android:color="@color/black"/>
        </shape>
    </item>
</selector>